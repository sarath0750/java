pipeline {
    jenkins-agent

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the GitHub repository
                git 'https://github.com/sarath0750/java.git'
            }
        }

        stage('Build') {
            steps {
                // Run Maven build (adjust if you're using a different build tool)
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                // Run tests (if any, can be Maven test or other)
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // You can add deployment steps here if needed
                echo 'Deploying application...'
            }
        }
    }
}
