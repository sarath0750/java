pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                dir('test4') {
                    sh './mvnw clean install'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                dir('test4') {
                    sh './mvnw test'
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                echo 'Uploading artifacts to Nexus...'
                dir('test4') {
                    sh './mvnw deploy'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project to Kubernetes...'
                // Add your deployment commands here
                sh 'kubectl apply -f deployment.yaml'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
